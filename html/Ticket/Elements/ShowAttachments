    function formatResult(node) {
      var $result = $('<span title="Lorem ipsum dolor sit amet" style="padding-left:' + (20 * (node.level-1)) + 'px;">' + '<img src="<%RT->Config->Get('WebPath')%>/static/images/icons8-folder-16.png"> ' + node.text + '</span>');

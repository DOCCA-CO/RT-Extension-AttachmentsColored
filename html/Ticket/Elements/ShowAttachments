    };

    $('.selectnode').select2({
      placeholder: 'Select an option',
      width: "230px",
      data: folderdata,
      formatSelection: function(item) {
        return item.text
      },
      formatResult: function(item) {
        return item.text
      },
      templateResult: formatResult,
      dropdownCssClass : 'bigdrop',
      dropdownAutoWidth : true
    });
  })
});


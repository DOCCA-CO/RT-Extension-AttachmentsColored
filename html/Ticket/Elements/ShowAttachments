var yOff = 25;
var xOff = 10;
var pathToImage; 

function resize(e, fname){
    pathToImage = fname;
    jQuery("body").append("<p id='image-when-hovering-text'><img src='" + pathToImage + "'/></p>");
    jQuery("#image-when-hovering-text").css("position", "absolute").css("top", (e.pageY - yOff) + "px")
            .css("left", (e.pageX + xOff) + "px")
            .fadeIn("fast");
//    jQuery(".text-hover-image").css("background-color", "yellow");
//    document.body.innerHTML = "<p id='image-when-hovering-text'><img src='" + pathToImage + "'/></p>";
//    document.getElementById("image-when-hovering-text").style.position = "absolute";
}

function remuve(){
    jQuery("#image-when-hovering-text").remove();
}

jQuery(".text-hover-image").mousemove(function (e) {
        jQuery("#image-when-hovering-text")
            .css("top", (e.pageY - yOff) + "px")
            .css("left", (e.pageX + xOff) + "px");
});
    

